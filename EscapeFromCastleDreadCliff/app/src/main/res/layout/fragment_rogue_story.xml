<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingEnd="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingStart="0dp"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/rogue_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you are a rogue"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rogue_header"
        android:id="@+id/rogue_button_container"
        android:layout_alignParentStart="true"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rogue_button_container"
        android:id="@+id/rogue_text_container"
        android:layout_alignParentStart="true"></RelativeLayout>



</RelativeLayout>
