<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.selectClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_marginLeft = "150dp"
        android:id="@+id/radioGroupO"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barbarian"
            android:id="@+id/option1RadioButton"
            android:layout_alignLeft="@+id/radioButton2"
            android:layout_alignStart="@+id/radioButton2"
            android:onClick ="onRadioButtonClicked"/>



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mage"
            android:id="@+id/option2RadioButton"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/radioButton"
            android:layout_alignLeft="@+id/radioButton3"
            android:layout_alignStart="@+id/radioButton3"
            android:checked="false"
            android:onClick ="onRadioButtonClicked"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rogue"
            android:id="@+id/option3RadioButton"
            android:layout_marginTop="37dp"
            android:checked="false"
            android:layout_below="@+id/radioButton2"
            android:layout_centerHorizontal="true"
            android:onClick ="onRadioButtonClicked"/>


    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/Sbutton"
        android:layout_marginTop="400dp"
        android:checked="false"

        android:layout_centerHorizontal="true"
        android:onClick="buttonSubmitClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLease select a class"
        android:id="@+id/textView2"

        android:layout_marginTop="34dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"></TextView>

</RelativeLayout>
